name = Bootstrap Call Center Theme
description = A Bootstrap Sub-theme for Call Center site.
core = 7.x
base theme = bootstrap


;;;;;;;;;;;;;;;;;;;;;
;; Regions
;;;;;;;;;;;;;;;;;;;;;
regions[search]         = 'Search'
regions[help]           = 'Help'
regions[title_bar]     = 'Title Bar'
regions[content]        = 'Content'
regions[footer_top]     = 'Footer top'
